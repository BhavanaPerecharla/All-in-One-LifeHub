<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <!-- Phone Number Input Field -->
    <EditText
        android:id="@+id/phoneNumberEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:hint="Enter Phone Number"
        android:inputType="phone"
        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center" />

    <GridLayout
        android:id="@+id/dialPadGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:padding="16dp"
        android:rowCount="3">

        <!-- Add margin to buttons to create gaps -->
        <Button
            android:id="@+id/button1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:backgroundTint="@color/colorAccent"
            android:text="1"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:onClick="inputNumber" />

        <Button
            android:id="@+id/button2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:backgroundTint="@color/colorAccent"
            android:textSize="24sp"
            android:text="2"
            android:textColor="#FFFFFF"
            android:onClick="inputNumber" />

        <Button
            android:id="@+id/button3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:backgroundTint="@color/colorAccent"
            android:textSize="24sp"
            android:text="3"
            android:textColor="#FFFFFF"
            android:onClick="inputNumber" />

        <Button
            android:id="@+id/button4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:backgroundTint="@color/colorAccent"
            android:textSize="24sp"
            android:text="4"
            android:textColor="#FFFFFF"
            android:onClick="inputNumber" />

        <Button
            android:id="@+id/button5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:backgroundTint="@color/colorAccent"
            android:textSize="24sp"
            android:text="5"
            android:textColor="#FFFFFF"
            android:onClick="inputNumber" />

        <Button
            android:id="@+id/button6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:textSize="24sp"
            android:backgroundTint="@color/colorAccent"
            android:text="6"
            android:textColor="#FFFFFF"
            android:onClick="inputNumber" />

        <Button
            android:id="@+id/button7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:textSize="24sp"
            android:backgroundTint="@color/colorAccent"
            android:text="7"
            android:textColor="#FFFFFF"
            android:onClick="inputNumber" />

        <Button
            android:id="@+id/button8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:textSize="24sp"
            android:backgroundTint="@color/colorAccent"
            android:text="8"
            android:textColor="#FFFFFF"
            android:onClick="inputNumber" />

        <Button
            android:id="@+id/button9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:textSize="24sp"
            android:backgroundTint="@color/colorAccent"
            android:text="9"
            android:textColor="#FFFFFF"
            android:onClick="inputNumber" />

        <Button
            android:id="@+id/buttonStar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="24sp"
            android:layout_margin="8dp"
            android:text="*"
            android:textColor="#000000"
            android:onClick="inputNumber" />

        <Button
            android:id="@+id/button0"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="24sp"
            android:layout_margin="8dp"
            android:text="0"
            android:textColor="#000000"
            android:onClick="inputNumber" />

        <Button
            android:id="@+id/buttonHash"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:textSize="24sp"
            android:text="#"
            android:textColor="#000000"
            android:onClick="inputNumber" />
    </GridLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"

        android:gravity="center"
        android:layout_marginBottom="30dp">

        <Button
            android:id="@+id/saveBtn"
            style="@style/ActionButtonStyle"
            android:text="Save"
            android:textSize="20sp"
            android:drawableStart="@drawable/baseline_save_24" />

        <Button
            android:id="@+id/callBtn"
            style="@style/ActionButtonStyle"
            android:textSize="20sp"
            android:text="Call"
            android:drawableStart="@drawable/ic_call"
            android:backgroundTint="#4CAF50" />

        <Button
            android:id="@+id/clearBtn"
            style="@style/ActionButtonStyle"
            android:textSize="20sp"
            android:text="Clear"
            android:drawableStart="@drawable/baseline_clear_24" />
    </LinearLayout>

</RelativeLayout>
